<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/title"
                android:text="Media"
            />

            <RadioGroup
                android:id="@+id/media_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/no_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nothing"
                />
                <RadioButton
                    android:id="@+id/one_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One Image"
                />
                <RadioButton
                    android:id="@+id/many_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Many Images"
                />
            </RadioGroup>

            <CheckBox
                android:id="@+id/shareousel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Shareousel"
                />

            <CheckBox
                android:id="@+id/alt_intent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Include Alternate Share Text Intent"
                />

            <CheckBox
                android:id="@+id/image_size_metadata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Report image size in metadata"
                />

            <TextView
                android:id="@+id/media_type_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/subtitle"
                android:text="Media Type"
                />

            <Spinner
                android:id="@+id/media_type_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/title"
                android:text="Text"
            />

            <RadioGroup
                android:id="@+id/text_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/no_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nothing"
                />
                <RadioButton
                    android:id="@+id/short_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Short"
                />
                <RadioButton
                    android:id="@+id/long_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Long"
                />
                <RadioButton
                    android:id="@+id/url_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="URL"
                />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/include_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Include Title"
                    />

                    <CheckBox
                        android:id="@+id/include_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Include Icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/use_rich_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Use Rich Text" />

                    <CheckBox
                        android:id="@+id/album_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mark as Album" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/title"
                android:text="Actions"
            />

            <RadioGroup
                android:id="@+id/action_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/no_actions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Actions"
                />
                <RadioButton
                    android:id="@+id/one_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One Action"
                />
                <RadioButton
                    android:id="@+id/five_actions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Five Actions"
                />
            </RadioGroup>

            <CheckBox
                android:id="@+id/include_modify_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Include Modify Share"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/title"
                android:text="Metadata"
                />

            <EditText
                android:id="@+id/metadata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/title"
                android:text="Advanced Options"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/subtitle"
                android:text="Average image loading latency"
            />

            <RadioGroup
                android:id="@+id/image_latency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/image_latency_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                />
                <RadioButton
                    android:id="@+id/image_latency_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50ms"
                />
                <RadioButton
                    android:id="@+id/image_latency_200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200ms"
                />
                <RadioButton
                    android:id="@+id/image_latency_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="800ms"
                />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/subtitle"
                android:text="Average image get type latency"
            />

            <RadioGroup
                android:id="@+id/image_get_type_latency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/image_get_type_latency_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                />
                <RadioButton
                    android:id="@+id/image_get_type_latency_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50ms"
                />
                <RadioButton
                    android:id="@+id/image_get_type_latency_200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200ms"
                />
                <RadioButton
                    android:id="@+id/image_get_type_latency_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="800ms"
                />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/subtitle"
                android:text="Average metadata latency"
                />

            <RadioGroup
                android:id="@+id/image_query_latency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/image_query_latency_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    />
                <RadioButton
                    android:id="@+id/image_query_latency_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50ms"
                    />
                <RadioButton
                    android:id="@+id/image_query_latency_200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200ms"
                    />
                <RadioButton
                    android:id="@+id/image_query_latency_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="800ms"
                    />
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/subtitle"
                android:text="Average selection latency"
                />

            <RadioGroup
                android:id="@+id/selection_latency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/selection_latency_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    />
                <RadioButton
                    android:id="@+id/selection_latency_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50ms"
                    />
                <RadioButton
                    android:id="@+id/selection_latency_200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200ms"
                    />
                <RadioButton
                    android:id="@+id/selection_latency_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="800ms"
                    />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/subtitle"
                android:text="Image load failure probability"
            />

            <RadioGroup
                android:id="@+id/image_load_failure_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/image_load_failure_rate_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                />
                <RadioButton
                    android:id="@+id/image_load_failure_rate_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50%"
                />
                <RadioButton
                    android:id="@+id/image_load_failure_rate_100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                />
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/subtitle"
                android:text="Refinement"
                />
            <CheckBox
                android:id="@+id/use_refinement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Use Refinement"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/subtitle"
                android:text="Caller Target"
                />
            <CheckBox
                android:id="@+id/caller_direct_target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Include Caller Direct Target"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/subtitle"
                android:text="Exclude Targets"
                />
            <CheckBox
                android:id="@+id/exclude_self"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exclude self from targets (for Shareousel payload change: set for an odd number of items)"
                />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share"
        android:padding="20dp"
        android:textSize="28sp"
    />
</LinearLayout>
